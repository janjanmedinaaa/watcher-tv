<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Warm dark gray for backgrounds -->
    <color name="gray_dark">#212121</color>

    <!-- Colors defined dedicated for TV screen white. -->
    <color name="screen_white">#E8EAED</color>
    <color name="screen_white_70">#B2E8EAED</color>
    <color name="screen_white_60">#99E8EAED</color>
    <color name="screen_white_10">#1AE8EAED</color>

    <!-- Colors defined dedicated for TV screen black. -->
    <color name="screen_black">#0E0E0F</color>

    <color name="default_text_color">@color/screen_white</color>
    <color name="default_text_color_secondary">@color/screen_white_60</color>

    <color name="action_button_ripple_color">@android:color/black</color>
    <color name="action_button_background_focused_color">@color/screen_white</color>
    <color name="action_button_background_unfocused_color">@color/screen_white_10</color>
    <color name="action_button_text_focused_color">@color/screen_black</color>
    <color name="action_button_text_unfocused_color">@color/screen_white_70</color>

    <color name="error_text">#EF9A9A</color>

    <color name="low_score">@android:color/holo_red_light</color>
    <color name="average_score">@android:color/holo_orange_light</color>
    <color name="high_score">@android:color/holo_green_light</color>
</resources>